{
  "manifest_version": 3,
  "name": "Fantasy Command Center - Draft Monitor",
  "version": "1.0.0",
  "description": "Real-time ESPN fantasy draft monitoring with Discord AI integration",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  
  "host_permissions": [
    "https://fantasy.espn.com/*",
    "https://discord.com/api/webhooks/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["https://fantasy.espn.com/football/draft*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Fantasy Command Center"
  },
  
  "icons": {
    "16": "icon.svg",
    "48": "icon.svg", 
    "128": "icon.svg"
  }
}